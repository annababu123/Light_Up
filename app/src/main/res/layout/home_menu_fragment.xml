<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/home_menu_fragment"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.sdc.aisat.annajijo.lightup.light_upclasses.HomeMenuFragment"
    android:weightSum="1">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:text="Set Goal"
            android:textColor="@color/white"
            android:id="@+id/textView1"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:text="@string/text2"
            android:id="@+id/textView2"
            android:layout_below="@id/textView1"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:id="@+id/txtArduino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/CaloryText"
            android:layout_alignTop="@+id/textView2"
            android:inputType="phone"
            android:text="10"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:text="@string/text3"
            android:id="@+id/textView3"
            android:layout_below="@id/textView2"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:id="@+id/CaloryText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignEnd="@+id/btnOff"
            android:inputType="phone"
            android:text="0"
            android:textSize="15sp" />
        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/CaloryText"
            />

        <Button android:id="@+id/btnOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READ"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/CaloryText"
            />

        <Button
            android:id="@+id/btnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:layout_below="@+id/CaloryText"
            android:layout_toRightOf="@id/btnOn"
          />


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="250dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardgoal"
            card_view:cardCornerRadius="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:clickable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/appintro4"
                    android:id="@+id/cardgoalsteps"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/cardgoalsteps"
                    android:layout_marginTop="5dp"
                    android:id="@+id/fact1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fact1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:layout_toRightOf="@+id/cardgoalsteps"
                    android:text="Average person should take at least 10,000 steps per day to maintain good health, which is equal to about 5 miles of walking"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardgoal2"
            card_view:cardCornerRadius="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/cardgoal"
            android:clickable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/food"
                    android:id="@+id/cardgoalfood"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/cardgoalfood"
                    android:layout_marginTop="5dp"
                    android:id="@+id/fact2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fact2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:layout_toRightOf="@+id/cardgoalfood"
                    android:text="Average Daily Intake of Kilocalories recommended is about 1800 to 2600 kcals"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <TextView
        android:text="Your Goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goalLabel"
        android:textAlignment="center"
        android:gravity="center_vertical|end"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/calLabel"
        android:text="45.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.61" />
    <TextView
        android:id="@+id/unitLabel"
        android:text="TOTAL KM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/progressbar"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:progressBackgroundTint="@android:color/holo_green_dark"
        android:progressBackgroundTintMode="src_over"
        android:progressTint="@android:color/holo_green_light"
        android:paddingLeft="50dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <ImageView
            android:id="@+id/paceImg"
            android:src="@drawable/rsz_ic_home"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:layout_width="108dp" />

        <ImageView
            android:id="@+id/runImg"
            android:src="@drawable/rsz_ic_news"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:layout_width="94dp" />

        <ImageView
            android:id="@+id/calImg"
            android:src="@drawable/rsz_ic_rank"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:layout_gravity="fill"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_weight="0.25" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
